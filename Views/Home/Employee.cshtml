@model RITFacultyV1.ViewModels.EmployeeViewModel

<h2>@Model.Title</h2>
<table id = "emp_table" class = "display">
	<thead>
		<tr>
			<th scope="col">Employer</th>
			<th scope="col">Degree</th>
			<th scope="col">City</th>
			<th scope="col">Title</th>
			<th scope="col">Start Date</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var emp in Model.employeeInformation)
		{
			<tr>
				<th scope="row">@emp.employer</th>
				<td>@emp.degree</td>
				<td>@emp.city</td>
				<td>@emp.title</td>
				<td>@emp.startDate</td>
			</tr>
		}
	</tbody>
</table>

@section Scripts
{
	<script src= "~/js/datatables.js"></script>
	<script>
		$("#emp_table").DataTable();
	</script>
}
