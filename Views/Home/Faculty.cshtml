@model RITFacultyV1.ViewModels.FacultyViewModel

<h2>@Model.Title</h2>

@foreach (var faculty in Model.Faculty)
{
    <div class="col-sm-3 col-lg-3 col-md-3">
        <div class="thumbnail">
            <img src="@faculty.imagePath" alt="" />
            <div class="caption">
                <h3 style="font-size:small">
                    @faculty.name
                </h3>
                <h3 style="font-size:small">
                    @faculty.title
                </h3>
                <h3 style="font-size:small">
                    @faculty.office
                </h3>
                <h3 style="font-size:small">
                    @faculty.phone
                </h3>
                <h3 style="font-size:small">
                    @faculty.email
                </h3>
            </div>
        </div>
    </div>
}